{
    "name": "@octopus/docs",
    "type": "module",
    "version": "0.0.1",
    "private": true,
    "packageManager": "pnpm@8.7.0",
    "engines": {
        "node": ">=18.14.1",
        "pnpm": ">=8.6.12"
    },
    "scripts": {
        "img": "node --no-experimental-fetch ./src/themes/octopus/utilities/img.mjs",
        "dev": "node --no-experimental-fetch ./src/themes/octopus/utilities/img.mjs && astro dev",
        "test": "astro build && npx playwright install --with-deps && npx playwright test",
        "spellcheck": "git fetch origin main:refs/remotes/origin/main && git diff origin/main --name-only --diff-filter=ACMRTUXB | cspell --no-must-find-files --file-list stdin",
        "build": "astro build",
        "preview": "astro preview",
        "astro": "astro",
        "css": "robocopy ./public/docs/css/ ./dist/docs/css/ /mir && robocopy ./public/docs/js/ ./dist/docs/js/ /mir"
    },
    "dependencies": {
        "@astrojs/mdx": "^2.0.0",
        "astro": "^4.0.3",
        "astro-accelerator-utils": "^0.3.7",
        "cspell": "^8.1.3",
        "hast-util-from-selector": "^3.0.0",
        "html-to-text": "^9.0.5",
        "keyword-extractor": "^0.0.28",
        "remark-directive": "^3.0.0",
        "remark-heading-id": "^1.0.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.39.0"
    },
    "pnpm": {
        "overrides": {
            "postcss@<8.4.31": ">=8.4.31",
            "zod@<=3.22.2": ">=3.22.3"
        }
    }
}
